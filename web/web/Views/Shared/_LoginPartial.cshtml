@using Microsoft.AspNetCore.Identity
@if (User.Identity.IsAuthenticated == true)
{
    using (Html.BeginForm("Logout", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item">
            <p class="nav-link">Hello @Html.Raw(User.Identity.Name) !</p>
        </li>
        <li class="nav-item"><a class="nav-link text-dark" href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        @*<li class="nav-item">@Html.ActionLink("Register", "Register", "Auth", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link text-dark" })</li>*@
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Auth", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-dark" })</li>
    </ul>
}