@model web.Models.CreateModels.CareWorkerCreateModel

@{
    ViewData["Title"] = "Nieuwe zorgmedewerker aanmaken";
}

<h1>Nieuwe zorgmedewerker aanmaken</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CareWorkerData.FirstName" class="control-label"></label>
                <input asp-for="CareWorkerData.FirstName" class="form-control" />
                <span asp-validation-for="CareWorkerData.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CareWorkerData.LastName" class="control-label"></label>
                <input asp-for="CareWorkerData.LastName" class="form-control" />
                <span asp-validation-for="CareWorkerData.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                 <label asp-for="CareWorkerData.Function" class="control-label"></label>
                @Html.DropDownList("CareWorkerData.Function", new SelectList(ViewBag.CareWorkerFunctions), null, new { @class ="form-control" })
            </div>

            <div class="form-group">
                <label asp-for="AccountData.UserName" class="control-label"></label>
                <input type="password" asp-for="AccountData.UserName" class="form-control" />
                <span asp-validation-for="AccountData.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountData.Password" class="control-label"></label>
                <input type="password" asp-for="AccountData.Password" class="form-control" />
                <span asp-validation-for="AccountData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountData.ConfirmPassword" class="control-label"></label>
                <input asp-for="AccountData.ConfirmPassword" class="form-control" />
                <span asp-validation-for="AccountData.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
