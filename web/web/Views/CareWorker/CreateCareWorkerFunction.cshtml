@{
    ViewData["Title"] = "Zorgmedewerker functie aanmaken";
}

<h4>Zorgmedewerker functie aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCareWorkerFunction">
            <div class="form-group">
                <label for="CareWorkerFunction" class="control-label">Functie</label>
                <input name="CareWorkerFunction" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <input type="submit" value="Functie aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Terug naar zorgmedewerkers</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
