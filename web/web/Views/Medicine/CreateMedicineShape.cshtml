@{
    ViewData["Title"] = "Medicijn vorm aanmaken";
}

<h4>Nieuwe medicijn vorm aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMedicineShape">
            <div class="form-group">
                <label for="Shape" class="control-label">Medicijn vorm</label>
                <input name="Shape" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <input type="submit" value="Vorm aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Terug naar medicijnoverzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
