@model web.Models.MedicineModel

@{
    ViewData["Title"] = "Create";
}

<h4>Nieuw medicijn aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Indication" class="control-label"></label>
                <input asp-for="Indication" class="form-control" />
                <span asp-validation-for="Indication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dose" class="control-label"></label>
                <input asp-for="Dose" class="form-control" />
                <span asp-validation-for="Dose" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                 <label asp-for="DoseUnit" class="control-label"></label>
                @Html.DropDownList("DoseUnit", new SelectList(ViewBag.DoseUnits), null, new { @class ="form-control" })
            </div>

            <div class="form-group">
                 <label asp-for="Shape" class="control-label"></label>
                @Html.DropDownList("Shape", new SelectList(ViewBag.MedicineShapes), null, new { @class ="form-control" })
            </div>

            <div class="form-group">
                 <label asp-for="Color" class="control-label"></label>
                @Html.DropDownList("Color", new SelectList(ViewBag.MedicineColors), null, new { @class ="form-control" })
            </div>

            <div class="form-group">
                 <label asp-for="Type" class="control-label"></label>
                @Html.DropDownList("Type", new SelectList(ViewBag.MedicineTypes), null, new { @class ="form-control" })
            </div>

            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
