@{
    ViewData["Title"] = "Medicijn type aanmaken";
}

<h4>Medicijn type aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMedicineType">
            <div class="form-group">
                <label for="Type" class="control-label">Medicijn type</label>
                <input name="Type" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <input type="submit" value="Type aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Terug naar medicijnoverzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
