@{
    ViewData["Title"] = "Medicijn kleur aanmaken";
}

<h4>Medicijn kleur aanmaken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMedicineColor">
            <div class="form-group">
                <label for="Color" class="control-label">Kleur</label>
                <input name="Color" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <input type="submit" value="Kleur aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index">Terug naar medicijnoverzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
