@model web.Models.CreateModels.PatientCreateModel

@{
    ViewData["Title"] = "Creëer Patiënt";
}

<h1>Creëer Patiënt</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientData.FirstName" class="control-label"></label>
                <input asp-for="PatientData.FirstName" class="form-control" />
                <span asp-validation-for="PatientData.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientData.LastName" class="control-label"></label>
                <input asp-for="PatientData.LastName" class="form-control" />
                <span asp-validation-for="PatientData.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientData.Email" class="control-label"></label>
                <input asp-for="PatientData.Email" class="form-control" />
                <span asp-validation-for="PatientData.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientData.PhoneNumber" class="control-label"></label>
                <input asp-for="PatientData.PhoneNumber" class="form-control" />
                <span asp-validation-for="PatientData.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientData.BirthDate" class="control-label"></label>
                <input asp-for="PatientData.BirthDate" class="form-control"/>
                <span asp-validation-for="PatientData.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientData.PostalCode" class="control-label"></label>
                <input asp-for="PatientData.PostalCode" class="form-control" />
                <span asp-validation-for="PatientData.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatientData.HomeNumber" class="control-label"></label>
                <input asp-for="PatientData.HomeNumber" class="form-control" />
                <span asp-validation-for="PatientData.HomeNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccountData.UserName" class="control-label"></label>
                <input asp-for="AccountData.UserName" class="form-control" />
                <span asp-validation-for="AccountData.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountData.Password" class="control-label"></label>
                <input type="password" asp-for="AccountData.Password" class="form-control" />
                <span asp-validation-for="AccountData.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountData.ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="AccountData.ConfirmPassword" class="form-control" />
                <span asp-validation-for="AccountData.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <input asp-for="RoomId" class="form-control" />
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Patiënt aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
